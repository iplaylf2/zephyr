{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "assets": [
      {
        "include": "./generated/**/*",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "classValidatorShim": false,
        "introspectComments": true
      }
    }
  ],
  "sourceRoot": "./src"
}