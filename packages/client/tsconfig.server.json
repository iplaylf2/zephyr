        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,
    },
    "include": [
        "vite.config.ts",
        "server.ts"
    ],
    "extends": "@zephyr/config/tsconfig.json",
}